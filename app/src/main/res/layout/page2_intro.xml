<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/Page2Text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:text="@string/page_two"
        android:background="@drawable/stars"
        android:backgroundTintMode="multiply"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/direction_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/swipe_left_or_right_to_navigate_between_pages"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="510dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:text="You must navigate through space to escape the disaster, and encounter many celestial obstacles along your way. Will you find your safe haven or will your mistakes result in your demise? "
        android:textSize="24sp" />
</RelativeLayout>