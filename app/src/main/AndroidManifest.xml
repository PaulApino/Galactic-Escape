<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gscape.sdp.galacticescape">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity
            android:name=".MainMenu"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_main_menu"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Introduction"
            android:configChanges="orientation|keyboard|screenSize"
            android:label="@string/game_introduction"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Display.ActualGame.GamePlayScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_game_play_screen"
            android:screenOrientation="landscape">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->


            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
        <activity android:name=".Playerselection" />
        <activity android:name=".CurrentPlayer" />
        <activity android:name=".Submenu" />
        <activity
            android:name=".Display.TestDisplay.StarFieldTest"
            android:configChanges="orientation|keyboard|screenSize"
            android:label="StarFieldTest"
            android:screenOrientation="landscape">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->


            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
        <activity android:name=".ControlPopup"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="landscape"
            />
        <activity android:name=".ScoreBoard"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>